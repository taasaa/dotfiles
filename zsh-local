# adding mysql gynamic libraries to library lookup path, http://lightyearsoftware.com/2011/02/mysql-5-5-on-mac-os-x/
export DYLD_LIBRARY_PATH="/usr/local/mysql/lib:$DYLD_LIBRARY_PATH"

alias bb="afplay /System/Library/Sounds/Glass.aiff"

export EDITOR="mvim -f"

alias h=heroku
alias hh="heroku help"

alias gti='git'
alias gt='git'
alias aria='aria2c -s 10 -x 10 -k 1M'

prompt fancy

NVMRC=~/.nvm/nvm.sh
if [ -e ${NVMRC} ]; then
  source ${NVMRC}
fi

export PGHOST=localhost
