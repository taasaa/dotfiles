alias gti='git'
alias gt='git'
alias aria='aria2c -s 10 -x 10 -k 1M'

alias rs='rails s'
alias rc='rails c'

alias git_rm_merged_branches='git branch --merged | grep -vw `git symbolic-ref HEAD --short` | xargs git branch -d'

alias redis="redis-server /usr/local/etc/redis.conf &"

prompt fancy

NVMRC=~/.nvm/nvm.sh
